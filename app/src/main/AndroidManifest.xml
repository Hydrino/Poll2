<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ninad.ninhydrin.poll2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivityChooser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sign_up.SignUpActivity"
            android:parentActivityName=".main_page.MainActivity"
            android:theme="@style/SignUpTheme" />

        <activity android:name=".main_page.MainActivity" />

        <activity
            android:name=".main_page.new_poll.AddNewPollActivity"
            android:label="@string/new_poll"
            android:parentActivityName=".main_page.MainActivity" />

    </application>

</manifest>